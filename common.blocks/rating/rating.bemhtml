block('rating') (
    tag()('span'),
    js()(true),
    attrs()({
        name : this.ctx.name
    }),
    content()(function() {
        return this.ctx.content.map(function(rate, i) {
            var ctx = this.ctx;

            return [
                {
                    elem : 'input',
                    attrs : {
                        id : this.generateId() + i,
                        name : ctx.name
                    }
                },
                {
                    elem : rate.elemName,
                    attrs : {
                        for : this.generateId() + i,
                        title : rate.content
                    }
                }
            ];
        }, this);
    })
);
