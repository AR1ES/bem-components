block input, elem hint {

    tag: 'label'

    attrs: {
        id: this._hintId,
        'for': this._inputId,
        'aria-hidden': true
    }

    !this._value, this._value !== 0, default: {
        var ctx = this.ctx,
            elemMods = ctx.elemMods || (ctx.elemMods = {});

        elemMods.visibility = 'visible';

        return applyCtx(ctx);
    }

}
