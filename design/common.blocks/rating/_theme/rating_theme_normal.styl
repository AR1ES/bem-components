size = (12 16);
background = (url('stars_size_s.svg') url('stars_size_m.svg'));
bgTopPosition = (-12 -16);

.rating_theme_normal {
    overflow: hidden;
    display: inline-block;
    position: relative;

    .rating__input
    {
        position: absolute;
        left: 0;
        top: -12px;
        opacity: 0;
    }

    &.rating_focused
    {
        border-color: rgba(0, 0, 0, 0.2);
        box-shadow: 0 0 5px 1px #fc0;
    }

    &.rating_disabled
    {
        z-index: -2;
        opacity: .5;
    }

    &.rating_readonly_on
    {
        z-index: -2;
    }

    .rating__label,
    .rating_theme_normal_hovered .rating__label
    {
        float: right;
        display: block;
    }

    .rating__label_hovered,
    .rating__label_hovered ~ .rating__label
    {
        cursor: pointer;
    }

    .rating__voting-result
    {
        position: absolute;
        z-index: -1;
    }

    for sizeVal, i in (s m) {
        &.rating_size_{sizeVal}
        {
            .rating__label,
            .rating_theme_normal_hovered .rating__label
            {
                width: (size[i])px;
                height: (size[i])px;
                background: background[i];
            }

            .rating__label_hovered,
            .rating__label_hovered ~ .rating__label
            {
                background-position: 0 (size[i])px;
            }

            .rating__voting-result
            {
                height: (size[i])px;
                background: background[i] 0 (size[i])px;
            }
        }
    }
}
