.button__icon_arrow_up,
.button__icon_arrow_right,
.button__icon_arrow_down,
.button__icon_arrow_left
{
    background-image: url(button__icon_arrow.svg);
}

.button__icon_arrow_up
{
    transform: rotate(180deg);
}

.button__icon_arrow_right
{
    transform: rotate(-90deg);
}

.button__icon_arrow_left
{
    transform: rotate(90deg);
}
